{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "lib": ["DOM", "ESNext"],

    /* Modules */
    "module": "ES2020",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Emit */
    "outDir": "./static/dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
